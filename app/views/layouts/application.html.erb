<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.svg" %>
      <%end%>
      </div>
      <ul>
        <li class="category">SBBLOGGER</li>
        <li><%= link_to "Blog", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="https://twitter.com/sburakbahceci">Twitter</a></li>
        <li><a href="https://www.linkedin.com/in/sburakbahceci/">LinkedIn</a></li>
        <li><a href="http://github.com/sburakbahceci">Github</a></li>
      </ul>
      <p class="sign_in">Admin Login</p>
    </div>
    <div id="main_content">
      <div id="header">
        <% if current_page?(root_path) %>
          <p>All Posts</p>
        <% elsif current_page?(about_path) %>
          <p>About</p>
        <% else %>
          <%= link_to "Back to All Posts", root_path %>
      <%end%>
        <div class="buttons">
          <button class="button"><%= link_to "New Post",new_post_path %>
          </button>
          <button class="button">Log Out</button>
        </div>
      </div>
      <% flash.each do |name,msg|%>
        <%= content_tag(:div,msg,class:"alert") %>
    <%end%>
    <%= yield %>
    </div>
    
    
  </body>
</html>
